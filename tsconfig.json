{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src/ts",
    "outDir": "dist/js",
    "sourceMap": true
  },
  "include": ["src/ts/**/*"],
  "exclude": ["node_modules"]
}
